<%- include('header') -%>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title pb-5">
      <h1 class="font-weight-bold">Login System</h1>
      <span>Log in for the existing user</span>
    </div>
    <form action="#">
        <div class="form-group">
            <input type="email" class="form-control" placeholder="emai" name="email">
            <small class="form-text text-muted text-right ">Register email address</small>
        </div>
        <div class="form-group">
            <input type="password" class="form-control mt-3" name="password" placeholder="password">
        </div>
        <button type="submit" class="btn btn-success mt-3">Submit</button>
    </form>
  </div>
</div>

<%- include('footer') -%>
